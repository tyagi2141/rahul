<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5dp"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:elevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/card_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:gravity="center|start"
                    android:hint="@string/id"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_sp"
                    android:textStyle="bold"

                    android:visibility="gone" />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="@string/name"
                    android:textColor="@color/lightrey"
                    android:textSize="@dimen/textsize_sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:hint="@string/name"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"

                    android:text="@string/userName"
                    android:textColor="@color/lightrey"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:hint="@string/userName"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"

                    android:text="@string/email"
                    android:textColor="@color/lightrey"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:hint="@string/email"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="@string/phone"

                    android:textColor="@color/lightrey"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:hint="@string/phone"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="@string/website"

                    android:textColor="@color/lightrey"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"

                    android:gravity="center|start"
                    android:hint="@string/website"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="@string/getbs"

                    android:textColor="@color/lightrey"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_getBs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:hint="@string/getbs"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="@string/getcatchphrase"

                    android:textColor="@color/lightrey"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_getCatchPhrase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"

                    android:gravity="center|start"
                    android:hint="@string/getcatchphrase"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"

                    android:text="@string/companyname"
                    android:textColor="@color/lightrey"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_companyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:hint="@string/companyname"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="@string/city"

                    android:textColor="@color/lightrey"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"

                    android:gravity="center|start"
                    android:hint="@string/city"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="@string/city"

                    android:textColor="@color/lightrey"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:hint="@string/street"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="@string/zipcode"
                    android:textColor="@color/lightrey"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:hint="@string/zipcode"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="@string/suits"

                    android:textColor="@color/lightrey"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_suits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:hint="@string/suits"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="@string/lattitude"

                    android:textColor="@color/lightrey"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_lat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:hint="@string/lattitude"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="@string/longitude"
                    android:textColor="@color/lightrey"
                    android:textSize="@dimen/textsize_sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_lng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:hint="@string/longitude"

                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_sp"

                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>